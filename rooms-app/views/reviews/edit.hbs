<div class="row">
    <div class="col align-self-center">
    <h2>Editing Review of '<a href="/room /{{reviewOf._id}}">{{reviewOf.name}}</a>'</h2>
    {{errorMessage}}
      {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
            <p>{{errorMessage}}</p>
        </div>
      {{/if}}
      {{#if successMessage}}
        <div class="alert alert-success" role="alert">
            <p>{{successMessage}}</p>
        </div>
      {{/if}}
      </div>
      <div class="col-2">
              <form class="float-end" action="/review/{{current._id}}/delete" method="POST">
            <button type="submit" class="btn btn-danger mb-2 mt-3">Delete</button>
    </form>
      </div>
    <form action="/review/{{current._id}}/update" method="POST">
    <div class="form-group">
        <label for="review">Review</label>
        <textarea class="form-control" name="review" id="review" required placeholder="Review">{{#if current}}{{current.review}}{{/if}}</textarea>
    </div>
        <button type="submit" class="btn btn-secondary mb-2 mt-3">Update Review</button>
    </form>
    </div>
</div>