<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Create room</h1>

            <hr>

            <form action="/create" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input required type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="description">
                </div>

                <div class="mb-3">
                    <label for="imagenUrl" class="form-label">Image</label>
                    <input type="text" class="form-control" id="imagenUrl" name="imagenUrl">
                </div>


                <button type="submit" class="btn btn-dark">Create new room</button>
                <a href="/" class="btn btn-dark">Go back</a>
            </form>
            <hr>
        </div>
    </div>
</div>