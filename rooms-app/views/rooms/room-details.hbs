<div class="container">
  {{#with rooms}}
    <h2>Details of {{name}}</h2>
    <div class="row">
      <div class="col-8">
        <h4>Description: {{description}}</h4>
        <p>imageUrl: {{imageUrl}}</p>
      </div>
    </div>
    <div class="reviews">
      <h2>Reviews</h2>

      <a href="/rooms/{{this._id}}/create-review">Create a Review</a>

      {{#if reviews}}
        {{#each reviews}}
          <p>{{this.comment}}</p>
        {{/each}}
      {{/if}}
    </div>
  {{/with}}

</div>