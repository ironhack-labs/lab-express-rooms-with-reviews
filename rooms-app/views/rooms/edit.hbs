<div class="container">
  <h2>Edit and Update {{room.name}}</h2>
  <form action="/rooms/{{room._id}}/edit" method="post">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{room.name}}"
      />
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        value="{{room.description}}"
      />
    </div>

    <div class="mb-3">
      <label for="pictureUrl" class="form-label">Picture</label>
      <input
        type="text"
        class="form-control"
        id="pictureUrl"
        name="pictureUrl"
        value="{{room.pictureUrl}}"
      />
    </div>

    <button type="submit" class="btn btn-dark">Update</button>
  </form>
</div>