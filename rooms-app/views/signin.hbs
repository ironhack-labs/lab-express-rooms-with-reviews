<h1>Signin</h1>

<form id="form" action="/signin" method="POST">
    <label for="email">Email-Address</label>
    <input type="email" name="email" placeholder="your-email@something.com" required>
<br><br>
    <label for="password">Password</label>
    <input id="myPassword" type="password" name="password" placeholder="********" value="" required>
    <!--input id="myPassword" type="password" name="" value=""-->
<br><br>
    <button type="submit">Login</button>
</form>
<br>
  {{#if errorMessage}}
    <div class="error-message">{{ errorMessage }}</div>
  {{/if}}