<p class="mt-5">Wellcome {{user.fullName}}</p>
<form class="mt-3" action="/private/my-rooms/{{room._id}}/edit" method='POST'>
    <div class="row">
        <div class="col-md-12 form-group mb-3">
            <label for="name">Room Name</label>
            <input value="{{room.name}}" type="text" class="form-control" name="name">
        </div>
        <div class="col-md-12 form-group mb-3">
            <label for="imageUrl">Image</label>
            <input value="{{room.imageUrl}}" type="text" class="form-control" name="imageUrl">
        </div>
        <div class="col-md-12 form-group mb-3">
            <label for="description">Description</label>
            <textarea class="form-control" name="description">{{room.description}}</textarea>
        </div>
    </div>
    <div class="d-flex">
        <button type="submit" class="btn btn-success ms-auto">Submit</button>
    </div>
</form>