<div class="d-flex flex-column align-items-center justify-content-center pb-2">
  <h1 class="text-center pt-2 fw-bolder">Room</h1>
</div>
<div class="d-flex flex-row justify-content-center px-5">
  <div class="card px-2 border-0" style="width: 500px;">
    <img
      src={{room.imageUrl}}
      class="card-img-top img-fluid d-flex mx-auto"
      style="height: 175px;width:350px"
      alt="..."
    />
    <div class="card-body">
      <h5 class="card-title"><strong>Name:</strong> {{room.name}}</h5>
      <h5 class="card-title"><strong>Description:</strong>
        {{room.description}}</h5>
      <h5 class="card-title"><strong>Owner:</strong> {{room.owner}}</h5>
      {{!-- <h5 class="card-title"><u><strong>Reviews: <strong></u></h5>
      {{#each reviews as |review|}}
        <p>{{review.name}}, {{review.occupation}} - "{{review.catchPhrase}}"</p>        
      {{/each}} --}}
      <div class="d-flex flex-column">
        <a
          href="/rooms/{{room.id}}/edit"
          class="btn btn-primary p-1 mt-1"
          role="button"
        >Edit</a>
        <a>
          <form
            action="/rooms/{{room.id}}/delete"
            method="POST"
            class="d-flex flex-column pt-1"
          >
            <button class="btn btn-danger pt-1">Delete</button>
          </form>
        </a>
      </div>
    </div>
  </div>
</div>