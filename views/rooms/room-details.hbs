<div class="d-flex flex-column align-items-center justify-content-center pb-2">
  <h1 class="text-center pt-2 fw-bolder">ROOM</h1>
</div>
<div class="d-flex flex-row justify-content-center px-5">
  <div class="card pt-2 border-0" style="width: 1000px;">
    <img
      src={{room.imageUrl}}
      class="card-img-top img-fluid d-flex mx-auto"
      style="height: 175px;width:350px"
      alt="..."
    />
    <div class="card-body">
      <div class="d-flex flex-column justify-content-center align-items-center">
        <h5 class="card-title"><strong><u>Name:</u></strong> {{room.name}}</h5>
        <h5 class="card-title"><strong><u>Owner:</u></strong> {{room.owner}}</h5>
      </div>

      {{#if userRoom}}
        <div class="d-flex flex-column">
          <a
            href="/rooms/{{room.id}}/edit"
            class="btn btn-primary p-1 mt-1"
            role="button"
          >Edit</a>
          <a>
            <form
              action="/rooms/{{room.id}}/delete"
              method="POST"
              class="d-flex flex-column pt-1"
            >
              <button class="btn btn-danger pt-1">Delete</button>
            </form>
          </a>
        </div>
      {{/if}}

      <h5 class="card-title my-5"><strong><u>DESCRIPTION:</u></strong>
        {{room.description}}</h5>

    </div>
    <div class="mb-3 mx-3">
      <h5 class="mb-4"><strong><u>REVIEWS:</u></strong></h5>
      {{#if room.reviews}}
        {{#each room.reviews as |review|}}
          <p>"{{review.comment}}" - "{{review.user}}"
            <form action="/reviews/{{review.id}}/delete" method="POST">
              <button type="submit" class="btn btn-danger mb-3">
                Delete Review
              </button>
            </form>
          </p>
        {{/each}}
      {{else}}
        No reviews
      {{/if}}

      {{#if userRoom}}{{else}}
        <h5 class="my-4"><strong><u>ADD A REVIEW:</u></strong></h5>
        <form action="/rooms/{{room.id}}/reviews" method="POST">
          <div class="mb-3">
            <textarea
              class="form-control"
              id="comment"
              name="comment"
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Add comment</button>
        </form>
      {{/if}}
    </div>
  </div>
</div>