<div class="container d-felx flex-row align-items-center">
  <h2 class="text-center fw-bolder pt-5">UPDATE YOUR ROOM</h2>

  <form
    action="/rooms/{{room.id}}/edit"
    method="POST"
    class="pt-3"
  >
    <div class="my-3 align-items-center">
      <label for="name" class="fw-bolder">NAME:</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value={{room.name}}
      />
    </div>
    <div class="my-3 align-items-center">
      <label for="description" class="fw-bolder">DESCRIPTION:</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        value={{room.description}}
      />
    </div>
    <div class="my-3 align-items-center">
      <label for="imageUrl" class="fw-bolder">IMAGE URL:</label>
      <input
        type="text"
        class="form-control"
        id="imageUrl"
        name="imageUrl"
        value={{room.imageUrl}}
      />
    </div>
    <div class="my-3 align-items-center">
      <label for="owner" class="fw-bolder">OWNER:</label>
      <input
        type="text"
        class="form-control"
        id="owner"
        name="owner"
        value={{room.owner}}
      />

    </div>
    {{!-- <div class="col-3 d-inline-flex flex-row px-3 align-items-center">
      <label for="celebrities">Choose a celebrity:</label>
      <select name="cast" id="cast" multiple>
        {{#each celebrities}}
          <option value={{this.id}} style="width: 200px;">{{this.name}}</option>
        {{/each}}
      </select>
    </div> --}}

    <button type="submit" class="btn btn-primary">Update</button>

  </form>
</div>