<div class="container d-felx flex-row align-items-center">
  <h2 class="text-center fw-bolder pt-5">Update your room</h2>

  <form
    action="/rooms/{{room.id}}/edit"
    method="POST"
    class="d-flex flex-row justify-content-center pt-3"
  >
    <div class="col-3 d-inline-flex flex-row px-3 align-items-center">
      <label for="title" class="fw-bolder">Title:</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        value={{room.title}}
      />
    </div>
    <div class="col-3 d-inline-flex flex-row px-3 align-items-center">
      <label for="genre" class="fw-bolder">Genre:</label>
      <input
        type="text"
        class="form-control"
        id="genre"
        name="genre"
        value={{room.genre}}
      />
    </div>
    <div class="col-3 d-inline-flex flex-row px-3 align-items-center">
      <label for="plot" class="fw-bolder">Plot:</label>
      <input
        type="text"
        class="form-control"
        id="plot"
        name="plot"
        value={{room.plot}}
      />

    </div>
    <div class="col-3 d-inline-flex flex-row px-3 align-items-center">
      <label for="celebrities">Choose a celebrity:</label>
      <select name="cast" id="cast" multiple>
        {{#each celebrities}}
          <option value={{this.id}} style="width: 200px;">{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>

  </form>
</div>