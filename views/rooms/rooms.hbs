<div class="d-flex flex-column align-items-center justify-content-center pb-3">
  <h1 class="text-center pt-5 pb-2 fw-bolder">ROOMS</h1>
  {{#if currentUser}}
  <a
    href="/rooms/create"
    class="btn btn-primary p-2 fw-bolder"
    role="button"
  >Add a new rooms</a>
  {{/if}}
</div>
<div class="d-flex flex-row justify-content-center px-3 pt-4">
  {{#each rooms as |room|}}
    <div class="card px-2 border-0" style="width: 18rem;">
      <img
        src={{room.imageUrl}}
        class="card-img-top"
        alt="..."
      />
      <div class="card-body">
        <h5 class="card-title"><strong>Name:</strong> {{room.name}}</h5>
        <a
          href="/rooms/{{room.id}}"
          class="btn btn-primary d-flex flex-column justify-content-center"
          role="button"
        >See more</a>
      </div>
    </div>

  {{/each}}
</div>